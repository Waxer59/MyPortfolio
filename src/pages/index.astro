---
import '../styles/styles.css'
import '../styles/normalize.css'
import 'aos/dist/aos.css'
import {
  Navbar,
  Footer,
  About,
  Skillset,
  Proyects,
  Contact,
  BackToTop
} from '../components/index'
import { WaveSvg } from '../components/Icons'
---

<html lang="en" class="dark-theme">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="images/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:site_name" content="Wadev Portfolio" />
    <meta property="og:title" content="Hey! this is my porfolio :-)" />
    <meta
      property="og:image"
      content="https://wadev.netlify.app/images/apple-touch-icon.png"
    />
    <meta property="og:url" content="https://wadev.netlify.app" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:title" content="Wadev Portfolio" />
    <meta
      property="og:description"
      content="Hi!, i'm Wadev and i'm a fullstack developer and this is my portfolio web, where you can contact me, look my skills or my bio"
    />
    <meta property="og:image:width" content="129" />
    <meta property="og:image:height" content="129" />
    <meta
      name="description"
      content="Hi!, i'm Wadev and i'm a fullstack developer and this is my portfolio web, where you can contact me, look my skills or my bio"
    />
    <title>Wadev Portfolio</title>
  </head>
  <body>
    <BackToTop client:only="react" />
    <Navbar client:load />
    <main class="main">
      <h1>Hi, i'm <span>Wadev</span></h1>
      <img
        src="/images/flork.webp"
        width="500"
        height="500"
        alt="Wadev profile picture"
        class="mainPhoto"
        id="mainPhoto"
      />
      <WaveSvg />
      <About />
      <Skillset />
      <Proyects client:only="react" />
      <Contact />
    </main>
    <Footer />
    <script>
      import AOS from 'aos'
      AOS.init()
    </script>
  </body>
</html>
